---
import './src/styles/global.css'

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Kardex</title>
	</head>
	<body class="relative bg-right bg-cover md:bg-center bg-no-repeat">
		<main class="w-full max-w-3xl h-full min-h-screen mx-auto flex justify-center items-center overflow-hidden">
			<section class="w-[90%] h-full max-h-3/5 lg:max-w-3xl md:max-h-80 m-auto grid justify-items-center relative z-10 p-4 gap-8 rounded">
				<slot />
			</section>
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-image: url('/bg.webp');
	}
	section {
        background-color: rgba(245, 245, 245, .3);
        color: #333;
        backdrop-filter: blur(5px);
    }
</style>
